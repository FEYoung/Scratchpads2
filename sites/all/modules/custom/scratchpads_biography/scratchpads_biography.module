include_once('scratchpads_biography.features.inc');

/*
 * Implements hook_form_alter().
 */
function scratchpads_biography_form_alter(&$form, &$form_state, $form_id) {
  
  // Change 'none' to 'Unknown' for gender default
  $form['field_gender']['und']['#options']['_none'] = 'Unknown';
  
  if ($form_id == 'user_profile_form') {
   
    $title = $form['field_born_date_']['und']['#title'];
   
    $form['field_born_date_']['und']['#title'] =  "<label for='edit-field-born-date-und-0-value-date'>" . $title . "</label>";
     
  }
}


