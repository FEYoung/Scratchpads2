<?php

/**
 * Implements hook_cron().
 */
function gbif_registry_client_cron(){
  // If we have already registered this site with the registry, we do not need
  // to continue.
  if(variable_get('gbif_registry_client_uuid', FALSE)){return;}
  module_load_include('install', 'gbif_registry_client');
  gbif_registry_client_install();
}