/**
 * Implements hook_cron().
 */
function gbif_registry_client_cron(){
  if(variable_get('gbif_registry_client_last_update', 0) + 604800 > time()){return;}
  // Once a week we update the information that GBIF holds about us.
  module_load_include('install', 'gbif_registry_client');
  gbif_registry_client_install();
  variable_set('gbif_registry_client_last_update', time());
}