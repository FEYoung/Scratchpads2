function emonocot_form_taxonomy_form_vocabulary_alter(&$form, &$form_state, $form_id){
  // Add the an additional submit function so that we can tweak the vocabulary.
  $form['#submit'][] = 'emonocot_taxonomy_form_vocabulary_submit';
}

function emonocot_taxonomy_form_vocabulary_submit($form, &$form_state){
  foreach(emonocot_itis_fields() as $field){
    // Create the field if it hasn't already been created.
    if(!field_info_field($field['field_config']['field_name'])){
      field_create_field($field['field_config']);
    }
    $field['field_instance']['bundle'] = $form_state['vocabulary']->machine_name;
    field_create_instance($field['field_instance']);
  }
}

