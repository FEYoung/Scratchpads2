<?php

/**
 * Implements hook_cron().
 */
function scratchpads_registry_client_cron(){
  // If we have already registered this site with the registry, we do not need
  // to continue.
  if(variable_get('scratchpads_registry_client_uuid', FALSE)){return;}
  module_load_include('install', 'scratchpads_registry_client');
  scratchpads_registry_client_install();
}